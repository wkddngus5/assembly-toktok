            <li class="status lawmaking">입법활동</li>
        </ul>
        <div class="writer-info">
            <div class="profile"></div>
            <h5 class="writer">{{project.proposer}}</h5>
        </div>
        <div class="percentage-zone">
            <div class="percentage"></div>
        </div>
        <p class="count">{{project.participations_count}}</p>
        <p class="percentage-number" data-item="{{project.participations_goal_count}}">78%</p>
        <button class="join-btn">참여하기</button>
        <ul class="share-list">
            <li class="share facebook"></li>
            <li class="share twitter"></li>
            <li class="share kakao"></li>
        </ul>
        <div class="assembly">
            <label class="assembly-man-list-label" for="assembly-man-list">참여의원</label>
